{
  "name": "toggle-case",
  "publisher": "c75",
  "displayName": "toggle-case",
  "description": "Toggle selected text case based on its current casing.",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/avin/vscode-toggle-case"
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:toggle-case.toggleCase"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "toggle-case.toggleCase",
        "title": "Toggle Case"
      }
    ],
    "keybindings": [
      {
        "command": "toggle-case.toggleCase",
        "key": "ctrl+shift+u",
        "mac": "ctrl+shift+u",
        "when": "editorTextFocus && !editorReadonly"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
